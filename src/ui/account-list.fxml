<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>


<BorderPane style="-fx-background-color: #b6edb2;" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <TableView fx:id="accounts" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="tvUser" prefWidth="110.0" text="Username" />
          <TableColumn fx:id="tvGender" prefWidth="95.0" text="Gender" />
            <TableColumn fx:id="tvCareer" prefWidth="171.0" text="Career" />
            <TableColumn fx:id="tvBirthday" prefWidth="87.0" text="Birthday" />
            <TableColumn fx:id="tvBrowser" prefWidth="96.0" text="Browser" />
        </columns>
         <BorderPane.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" />
         </BorderPane.margin>
      </TableView>
   </center>
   <top>
      <HBox alignment="TOP_RIGHT" prefHeight="63.0" prefWidth="600.0" style="-fx-background-color: #b6edb2;" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="usernameAccountList" text="User">
               <font>
                  <Font size="19.0" />
               </font>
               <HBox.margin>
                  <Insets bottom="20.0" left="20.0" top="30.0" />
               </HBox.margin>
            </Label>
            <ImageView fx:id="imageUser" fitHeight="63.0" fitWidth="63.0" pickOnBounds="true" preserveRatio="true">
               <HBox.margin>
                  <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
               </HBox.margin>
            </ImageView>
            <Button alignment="CENTER" mnemonicParsing="false" onAction="#logOut" style="-fx-background-color: #6ede66;" text="Log Out">
               <HBox.margin>
                  <Insets top="25.0" />
               </HBox.margin>
               <font>
                  <Font size="15.0" />
               </font>
            </Button>
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets right="20.0" />
         </padding>
      </HBox>
   </top>
</BorderPane>
